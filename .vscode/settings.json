{
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Editor Language Settings
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "files.exclude": {
    "/node_modules": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.next": true,
    "**/.svn": true,
    "**/CVS": true
  },
  "files.watcherExclude": {
    "/node_modules/": true,
    "/.stencil/": true,
    "/dist/": true,
    "/.rush/": true
  },
  /*
   * Search Settings
   */
  "search.exclude": {
    "/node_modules": true
  },
  "scss.showErrors": true,
  "stencilTools.style.extension": "scss"
}